{
  "name": "web-doom-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "DOOM ported to web with TypeScript",
  "packageManager": "bun@latest",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter \"./packages/*\" dev",
    "build": "bun run build:libs && bun run build:pages",
    "build:libs": "bun run --filter @web-doom/wad build && bun run --filter @web-doom/core build && bun run --filter @web-doom/wad-viewer build",
    "build:pages": "bun run --filter @web-doom/pages build",
    "typecheck": "tsc -b packages/wad packages/web-doom packages/wad-viewer packages/pages",
    "test": "bun run --filter \"./packages/*\" test",
    "lint": "bun run typecheck",
    "clean": "rm -rf packages/*/dist packages/*/tsconfig.tsbuildinfo node_modules bun.lockb"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
