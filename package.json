{
  "name": "web-doom-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "DOOM ported to web with TypeScript",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter \"./packages/*\" dev",
    "build": "bun run --filter \"./packages/*\" build",
    "test": "bun run --filter \"./packages/*\" test",
    "lint": "bun run --filter \"./packages/*\" lint",
    "clean": "bun run --filter \"./packages/*\" clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
