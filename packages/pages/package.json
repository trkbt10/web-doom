{
  "name": "@web-doom/pages",
  "version": "0.0.1",
  "type": "module",
  "description": "GitHub Pages for web-doom and wad-viewer preview",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "@web-doom/core": "workspace:*",
    "@web-doom/wad": "workspace:*",
    "@web-doom/wad-viewer": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
