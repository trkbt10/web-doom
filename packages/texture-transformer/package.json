{
  "name": "@web-doom/texture-transformer",
  "version": "0.0.1",
  "type": "module",
  "description": "WAD texture transformation using Gemini AI image-to-image generation",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsgo --noEmit",
    "typecheck": "tsgo --noEmit",
    "clean": "rm -rf dist node_modules catalog",
    "extract": "bun cli/extract.ts",
    "recompile": "bun cli/recompile.ts",
    "extract:freedoom1": "bun cli/extract.ts ../../assets/freedoom-0.13.0/freedoom1.wad catalog/freedoom1",
    "extract:freedoom2": "bun cli/extract.ts ../../assets/freedoom-0.13.0/freedoom2.wad catalog/freedoom2"
  },
  "dependencies": {
    "@google/genai": "^1.27.0",
    "@web-doom/wad": "workspace:*",
    "canvas": "^3.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.24",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vitest": "^1.6.1"
  }
}
